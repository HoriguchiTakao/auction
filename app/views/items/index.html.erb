<h1>出品物一覧</h1>

<ul>
  <% @items.each do |item| %>
    <li>
      <%= link_to item.name, item_path(item) %>
      <!-- <a href="./<%=item.id %>"> -->
      <!-- <%= item.name %> -->
      <!-- </a> -->
      <!-- link_toは暗黙的にgetを呼び出している -->
      <%= link_to '編集する', edit_item_path(item) %>
      <%= link_to '削除する', item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
